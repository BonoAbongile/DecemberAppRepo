<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:prism="http://prismlibrary.com"
                  prism:ViewModelLocator.AutowireViewModel="True"
                  x:Class="DecemberAppTask.Views.NavigationBar">

    <MasterDetailPage.Master>
        <NavigationPage Title="Menu">
            <x:Arguments>
            <ContentPage>
                <StackLayout Padding="20">
                    <!-- TODO: // Update the Layout and add some real menu items  -->
                        <Button Text="Landing Page" Command="{Binding LandingPageCommand}" />
                        <Button Text="Map" Command="{Binding NavigateCommand}" />
                        <Button Text="Personal Care" Command="{Binding ToPersonalCarePage}"/>
                    </StackLayout>
            </ContentPage>
            </x:Arguments>
        </NavigationPage>
        
    </MasterDetailPage.Master>
    
</MasterDetailPage>